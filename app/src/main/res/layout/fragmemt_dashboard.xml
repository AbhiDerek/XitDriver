<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="@dimen/padding_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_10dp"
                android:drawablePadding="@dimen/padding_10dp"
                android:background="@drawable/rectangle_background"
                android:drawableTop="@drawable/user"
                android:textColor="@color/black"
                android:layout_margin="@dimen/padding_2dp"
                android:textSize="@dimen/text_size_12"
                android:text="Profile"/>

        <TextView
                android:id="@+id/tv_vehicle_infor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_10dp"
                android:drawablePadding="@dimen/padding_10dp"
                android:background="@drawable/rectangle_background"
                android:drawableTop="@drawable/carinfo"
                android:textColor="@color/black"
                android:layout_margin="@dimen/padding_2dp"
                android:textSize="@dimen/text_size_12"
                android:text="Vehicle Information"/>

        <TextView
                android:id="@+id/tv_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_10dp"
                android:drawablePadding="@dimen/padding_10dp"
                android:background="@drawable/rectangle_background"
                android:drawableTop="@drawable/orderh"
                android:textColor="@color/black"
                android:layout_margin="@dimen/padding_2dp"
                android:textSize="@dimen/text_size_12"
                android:text="Booking History"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="@dimen/padding_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_banking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_10dp"
                android:drawablePadding="@dimen/padding_10dp"
                android:background="@drawable/rectangle_background"
                android:drawableTop="@drawable/bankinfo"
                android:textColor="@color/black"
                android:layout_margin="@dimen/padding_2dp"
                android:textSize="@dimen/text_size_12"
                android:text="Banking Information"/>

        <TextView
                android:id="@+id/tv_driver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_10dp"
                android:drawablePadding="@dimen/padding_10dp"
                android:background="@drawable/rectangle_background"
                android:drawableTop="@drawable/driver"
                android:textColor="@color/black"
                android:layout_margin="@dimen/padding_2dp"
                android:textSize="@dimen/text_size_12"
                android:text="Driver"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_10dp"
                android:drawablePadding="@dimen/padding_10dp"
                android:background="@drawable/rectangle_background"
                android:drawableTop="@drawable/help"
                android:textColor="@color/black"
                android:layout_margin="@dimen/padding_2dp"
                android:visibility="visible"
                android:textSize="@dimen/text_size_12"
                android:text="Help Centre"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:padding="@dimen/padding_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fmcsa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_10dp"
            android:drawablePadding="@dimen/padding_10dp"
            android:background="@drawable/rectangle_background"
            android:drawableTop="@drawable/carinfo"
            android:textColor="@color/black"
            android:layout_margin="@dimen/padding_2dp"
            android:textSize="@dimen/text_size_12"
            android:text="FMCSA"/>

        <TextView
            android:id="@+id/tv_chp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_10dp"
            android:drawablePadding="@dimen/padding_10dp"
            android:background="@drawable/rectangle_background"
            android:drawableTop="@drawable/orderh"
            android:textColor="@color/black"
            android:layout_margin="@dimen/padding_2dp"
            android:textSize="@dimen/text_size_12"
            android:text="CHP"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_10dp"
            android:drawablePadding="@dimen/padding_10dp"
            android:background="@drawable/rectangle_background"
            android:drawableTop="@drawable/bankinfo"
            android:textColor="@color/black"
            android:layout_margin="@dimen/padding_2dp"
            android:visibility="visible"
            android:textSize="@dimen/text_size_12"
            android:text="DMV"/>

    </LinearLayout>

</LinearLayout>